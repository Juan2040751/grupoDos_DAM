        <action
            android:id="@+id/action_AddChallengeFragment_to_homeChallengesFragment"
            app:destination="@id/homeChallengesFragment" />
    </fragment>

    <fragment
        android:id="@+id/ChallengeEditFragment"
        android:name="com.example.grupodos_dam.view.fragment.ChallengeEditFragment"
        android:label="fragment_Challenge_edit"
        tools:layout="@layout/fragment_challenge_edit" >

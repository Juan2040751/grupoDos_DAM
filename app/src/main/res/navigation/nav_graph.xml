<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homePicobotellaFragment2">

    <fragment
        android:id="@+id/homePicobotellaFragment2"
        android:name="com.example.grupodos_dam.view.fragment.HomePicobotellaFragment"
        android:label="fragment_home_picobotella"
        tools:layout="@layout/fragment_home_picobotella" />

    <fragment
        android:id="@+id/homeChallengesFragment"
        android:name="com.example.grupodos_dam.view.fragment.HomeChallengesFragment"
        android:label="fragment_home_Challenges"
        tools:layout="@layout/fragment_home_challenges" >
        <action
            android:id="@+id/action_homeChallengesFragment_to_addChallengeFragment"
            app:destination="@id/addChallengeFragment" />
        <action
            android:id="@+id/action_homeChallengesFragment_to_EditChallengeFragment"
            app:destination="@id/ChallengeEditFragment" />
    </fragment>

    <fragment
        android:id="@+id/addChallengeFragment"
        android:name="com.example.grupodos_dam.view.fragment.AddChallengeFragment"
